@page
@model AdBoard.Areas.Identity.Pages.Account.LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                @Html.ValidationSummary(true, "")
                <div class="form-group">
                    <label asp-for="Input.Email"></label>:
                    <input asp-for="Input.Email" class="form-control dark-input" />
                    @Html.ValidationMessageFor(m => m.Input.Email, "")
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>:
                    <input asp-for="Input.Password" class="form-control dark-input" />
                    @Html.ValidationMessageFor(m => m.Input.Password, "")
                </div>
                <br/>
                <div class="form-group">
                    <div class="toggle-switch">
                        <input asp-for="Input.RememberMe" type="checkbox" id="toggle" />
                        <label for="toggle" class="toggle-label">
                            <span class="toggle-slider"></span>
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>
                <br />
                <div class="form-group">
                    <button type="submit" class="btn btn-primary btn-lg">Zaloguj</button>
                </div>
                <br />
                <div class="form-group">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Nie masz konta? Zarejestruj się.</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
