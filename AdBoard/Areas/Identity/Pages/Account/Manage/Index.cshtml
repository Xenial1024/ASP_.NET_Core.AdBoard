@page
@model IndexModel
@{
    ViewData["Title"] = "Zmień Dane";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-8">
        <form id="profile-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-group mb-3">
                <label asp-for="Input.Username" class="control-label label-font-size"></label>
                <input asp-for="Input.Username" class="form-control dark-input w-100" />
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Input.PhoneNumber" class="control-label label-font-size"></label>
                <input asp-for="Input.PhoneNumber" class="form-control dark-input w-100" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <button id="update-profile-button" type="submit" class="w-100 btn btn-lg btn-primary">Zapisz</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
