@page
@model AdBoard.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Stwórz nowe konto.</h4>
            <hr />
            <div class="form-group">
                <label asp-for="Input.Email"></label>:
                <input asp-for="Input.Email" class="form-control dark-input" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>:
                <input asp-for="Input.Password" class="form-control dark-input" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.ConfirmPassword"></label>:
                <input asp-for="Input.ConfirmPassword" class="form-control dark-input" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Name"></label>:
                <input asp-for="Input.Name" class="form-control dark-input" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber"></label>:
                <input asp-for="Input.PhoneNumber" class="form-control dark-input" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <div class="toggle-switch">
                    <input asp-for="Input.RememberMe" type="checkbox" id="toggle" />
                    <label for="toggle" class="toggle-label">
                        <span class="toggle-slider"></span>
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-primary btn-lg">Zarejestruj</button>
            <br />
            <div class="form-group">
                <p>
                    <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Masz już konto? Zaloguj się.</a>
                </p>
            </div>
        </form>
    </div>
    <div class="col-md-8">
        <h5>
            Pola "<label asp-for="Input.Email"></label>", "<label asp-for="Input.Password"></label>" i "<label asp-for="Input.ConfirmPassword"></label>" są obowiązkowe.
            <br/>
            <br/>
            Pola "<label asp-for="Input.Email"></label>", "<label asp-for="Input.Name"></label>" i "<label asp-for="Input.PhoneNumber"></label>" będą widoczne w ogłoszeniach.
        </h5>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}